<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="SettingsTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="text_common_style">
        <!--<item name="android:fontFamily">@font/quicksand</item>-->
    </style>

    <style name="text_price_style" parent="@style/text_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textStyle">bold</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMinTextSize">40sp</item>
        <item name="autoSizeMaxTextSize">96sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="android:text">@string/price_loading</item>
    </style>

    <style name="text_source_price" parent="@style/text_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="text_tab" parent="TextAppearance.Design.Tab">
        <!--<item name="android:fontFamily">@font/quicksand</item>-->
    </style>

    <style name="text_toolbar" parent="@style/text_common_style">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
